@page "{Id:int}"
@model scoreapp.Pages.Users.UserRoleModel
@{
    ViewData["Title"] = "Administración de Role de Usuario";
}



<form method="post">

    <div class="container">


        <!--Section: Content-->
        <section class="dark-grey-text text-center mb-5">

            <!-- Section heading -->
            <h3 class="font-weight-bold mb-5">Administración de Roles para @Model.data.DisplayName</h3>

            <div class="row">
                <div class="col-xl-12">
                    <button type="submit" class="btn btn-success"><i class="far fa-save mr-1"></i>Guardar</button>
                    <a class="btn btn-danger" href="@Request.Headers["Referer"]">
                        <i class="fas fa-ban mr-1"></i>Cancelar
                    </a>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <table class="table table-responsive-md mb-0">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Role</strong>
                                </th>
                                <th>
                                    <strong>Estatus</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Roles)
                            {
                                <tr>
                                    <th scope="row">@item.Description</th>
                                    <td>
                                        <div class="form-check">
                                            @if (Model.data.Role != null && Model.data.Role.Description.ToUpper().Equals(item.Description.ToUpper()))
                                            {
                                                <input class="form-check-input" type="radio" name="RoleId" id="@item.Id" value="@item.Id" checked>
                                            }
                                            else
                                            {
                                                <input class="form-check-input" type="radio" name="RoleId" id="@item.Id" value="@item.Id">
                                            }

                                            <label class="form-check-label" for="@item.Id"></label>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Table -->

        </section>
        <!--Section: Content-->


    </div>

</form>

