<div class="md-form md-outline mt-3">
    <input asp-for="_person.BornDate" class="form-control"  autocomplete="off">
    <label asp-for="_person.BornDate" class="activeCustom" style="position:absolute;top:18px;">@Html.DisplayNameFor(x => x._person.BornDate)</label>
    <span asp-validation-for="_person.BornDate" class="text-danger"></span>
