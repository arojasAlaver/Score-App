@model scoreapp.Pages.Applications.IndexModel


<div class="modal fade" id="modalStatus" data-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-body mx-3">

                <a href="#!" class="card hoverable">

                    <!-- Card content -->
                    <div class="card-body">

                        <div class="media align-content-center">
                            <span class="card-img-100 d-inline-flex justify-content-center align-items-center rounded-circle grey lighten-3 mr-4">
                                <i class="fab fa-react fa-2x text-info"></i>
                            </span>
                            <div class="media-body">
                                <div class="md-form md-outline mt-3">
                                    <input id="Amount" autocomplete="off" class="form-control" ng-model="amount" mask-currency="''" value="{{amount|customNumber}}" ng-blur="amount = ifNull(amount)">
                                    <label for="Amount">Monto Aprobado</label>
                                </div>
                                <div class="form-group shadow-textarea">
                                    <textarea class="form-control z-depth-1" id="exampleFormControlTextarea6" rows="3" placeholder="Descripción o Motivo opcional" ng-model="description"></textarea>
                                </div>

                            </div>
                        </div>

                    </div>

                </a>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-success" ng-click="result(1)"><i class="fas fa-check-circle mr-1"></i>Aprobado</button>
                <button class="btn btn-purple" ng-click="result(2)"><i class="fal fa-do-not-enter mr-1"></i>Rechazado</button>
                <button class="btn btn-danger" data-dismiss="modal"><i class="fas fa-ban mr-1"></i>Cancelar</button>
            </div>
        </div>
    </div>
</div>


